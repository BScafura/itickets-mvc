@model dynamic
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tickets.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body style="background: rgba(0,0,0,0.87) ">
    <header>
        <nav style="background: black" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <a style ="color: gold" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">iTickets</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <div>
                        <li class="navbar-nav flex-column flex-grow-1">
                            <a style="color: white" class="nav-link" asp-controller="Filme" asp-action="Index"><i class="badge-info bi-film"></i> Filmes</a>
                        </li>
                        </div>
                        <li class="nav-item dropdown">
                    <a style="color: white" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="bi bi-gear"></i> Administração</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Cinema" asp-action="Index"><i class="bi bi-camera-reels"></i> Cinemas</a>
                                <a class="dropdown-item" asp-controller="Produtores" asp-action="Index"><i class="bi bi-headset"></i> Produtores</a>
                                <a class="dropdown-item" asp-controller="Atores" asp-action="Index"><i class="bi bi-person-square"></i> Atores</a>
                            </div>
                        </li>
                    </ul>
                <form class="form-inline" asp-controller="Filme" asp-action="Buscar" style="width:700px; padding-right: 10px;">
                    <div class="input-group">
                        <input name="buscarString" type="text" class="form-control" placeholder="Buscar por um filme...">
                        <div class="input-group-append">
                            <button class="btn btn-dark my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </div>
                </form>
                <ul class="navbar-nav">
                    @if (ViewBag.Items != null)
                        {
                            @foreach (var item in ViewBag.Items)
                            {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Ordems" asp-action="Ordems"><i class="bi bi-cart3"></i>@item.Quantidade</a>
                            </li>
                            }
                        }            
                </ul>
                <a class="btn btn-dark my-2 my-sm-0" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i> Entrar</a>
                <span style="padding: 5px;"></span>
                <a class="btn btn-dark my-2 my-sm-0" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus"></i> Registrar</a>
                <span style="padding: 5px;"></span>


                @*Area do utilizador*@
                <div class="dropdown">
                    <button class="btn btn-warning dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-expanded="false"><i class="bi bi-person-badge"></i> Bem vindo User</button>
                    <ul class="dropdown-menu" aria-labelledby="profile-btn">
                        <li>
                            <a class="dropdown-item" asp-controller="Ordems" asp-action="Index"><i class="bi bi-list"></i>Minhas compras</a>
                        </li>
                    </ul>
                </div>
                <span style ="padding: 5px;"></span>
                <form asp-controller="Account" asp-action="Logout">
                    <button class="btn btn-danger my-2 my-sm-0">    
                        <i class="bi bi-box-arrow-in-right"></i> Sair
                    </button>
                </form>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background: black" class="footer text-muted">
        <div class="container" align="center" style=" text-align: center; vertical-align: middle;">
            <p style="font-size: 12px; margin: 0px;">&copy 1990-2024 by iTickets.com, Inc.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
