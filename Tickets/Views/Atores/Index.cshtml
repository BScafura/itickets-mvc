@model IEnumerable<Ator>

    @{
        ViewData["Title"] = "Lista de Atores e Atrizes";
    }

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table">
                <thead>
                <tr class="text-center">
                    <th style="color:white">@Html.DisplayNameFor(model => model.FotoProfile)</th>
                    <th style="color:white">@Html.DisplayNameFor(model => model.NomeAtor)</th>
                    <th style="color:white">@Html.DisplayNameFor(model => model.Bio)</th>
                    <th style ="color:white">Ações</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                    <td class="align-middle">
                            <img class="rounded-circle" src="@item.FotoProfile" alt="@item.NomeAtor" style="max-width:150px ;  min-width:150px;  min-height:150px; max-height:150px; object-fit:cover" />
                    </td>
                    <td class="align-middle text-white">
                        @Html.DisplayFor(modelItem => item.NomeAtor)
                    </td>
                    <td class="align-middle text-white">
                        @Html.DisplayFor(modelItem => item.Bio)

                    </td>
                    <td class="align-middle">
                            <a class="btn btn-warning btn-sm text-black w-100" asp-controller="Atores" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Editar</a>
                            <span style="padding: 1px"></span>
                            <a class="btn btn-warning btn-sm text-black w-100" asp-controller="Atores" asp-action="Detalhes" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Detalhes</a>
                            <span style="padding: 1px"></span>
                            <a class="btn btn-danger btn-sm text-black  w-100" asp-controller="Atores" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Excluir</a>
                    </td>
                    </tr>
                
                
                }
                </tbody>
            </table>
        </div>
    </div>

<div style="position:fixed; right: 25px; bottom: 10px; z-index: 1;" class="text-white">
        <a asp-controller="Atores" asp-action="Criar" class="btn btn-success"><i class="bi bi-plus-circle"></i>Criar novo</a>
    </div>